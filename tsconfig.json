{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES2017",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "lib": [
      "ES2015",
      "ES2017",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  }
}